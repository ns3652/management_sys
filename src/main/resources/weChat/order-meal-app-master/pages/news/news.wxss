page {
    font-size: 32rpx;
    background-color: #f2f3f4;
    color: #303133;
}

.content {
    background-color: #fff;
    margin: 20rpx 0;
}

.item-nav-0 {
    display: flex;
    flex-direction: column;
    margin: 0 20rpx;
    padding: 40rpx 0;
    border-bottom: 1px solid #f2f3f4;
    box-sizing: border-box;
}

.item-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    word-break: break-all;
    flex: 1;
}

.item-image-0 {
    width: 710rpx;
    height: 400rpx;
    border-radius: 20rpx;
    margin-top: 20rpx;
}

.item-other{
    font-size: 28rpx;
    color: #999;
    height: 40rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.item-nav-1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 20rpx;
    padding: 40rpx 0;
    border-bottom: 1px solid #f2f3f4;
    box-sizing: border-box;
}

.item-nav-1:last-of-type{
    border: none;
}

.item-info-1 {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.item-image-1 {
    width: 260rpx;
    height: 150rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
}

