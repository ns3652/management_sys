page{
    font-size: 32rpx;
    background-color: #F2F3F4;
    color: #303133;
}

.content{
    background-color: #fff;
    width: 100%;
    padding: 20rpx;
    margin: 40rpx 0;
}

.content > textarea{
    width: 95%;
}

input{
    background-color: #fff;
    padding: 20rpx;
}

.btn-group{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.btn-ok{
    margin-top: 80rpx;
    color: #fff;
    background-color: #2DD089;
    width: 95%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 50rpx;
}