page{
    background-color: #F4F5F7;
    /* background-image: url('../../assets/images/home-banner.png'); */
    background-repeat:no-repeat;
}

.banner{
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: -1;
    /* opacity: 0.9; */
}

.wraper{
    padding: 200rpx 20rpx 0;
}

.logo-view{
    margin-left: 20rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
}


.content1{
    background-color: #fff;
    padding: 20rpx;
    margin-top: -80rpx; 
    border-radius: 10rpx;
}

.title{
    font-size: 40rpx;
    color: #232E49;
    margin: 0 0 20rpx 200rpx; 
}

.memo{
    color: #909399;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.swiper{
    width: 100%;
    height: 280rpx;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}

.welcome{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60rpx;
    font-size: 28rpx;
}

.welcome-text{
    flex: 1;
    height: 100%;
    line-height: 60rpx;
    color: #606266;
    border-radius: 60rpx;
    background-color: #F4F5F7;
    padding-left: 30rpx;
}

.welcome-btn{
    width: 180rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    border-radius: 60rpx;
    background-color: #2DD089;
    margin-left: 20rpx;
}

.content2{
    margin-top: 20rpx;
    padding: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
    font-size: 28rpx;
}

.content2-sub-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #909399;
    margin: 10rpx 0;
    height: 60rpx;
}

.content2-sub-title-line{
    width: 8rpx;
    height: 30rpx;
    margin-right: 20rpx;
    background-color: #2DD089;
}

.meal-name{
    flex: 1;
}

.order-time{
    width: 260rpx;
    text-align: center;
}

.refund-time{
    width: 180rpx;
    text-align: center;
}

.content2-sub-memo{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #606266;
    padding-left: 28rpx;
    height: 50rpx;
}

.content2-sub-title-address{
    flex: 1;
}
